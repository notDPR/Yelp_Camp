<% include ../partials/header.ejs %>
<!--=======================================================================-->

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=camp_sel.image%>">
                <div class="caption">
                    <div style="padding-bottom:5px;">
                        <h4 style="display:inline;"><a><%=camp_sel.name%></a></h4>
                        <h4 style="display:inline;margin:0;" class="pull-right">â‚¹100.00/night</h4>
                    </div>
                    <p>
                        <%=camp_sel.description%>
                    </p>
                    <p><em>Submitted By : <strong><%=camp_sel.author.username%></strong></em></p>
                    <%if(current_user && camp_sel.author.id.equals(current_user._id)){%>
                        <a class="btn btn-sm btn-warning text-right" href="/campgrounds/<%=camp_sel._id%>/edit">Edit</a>
                        <form action="/campgrounds/<%=camp_sel._id%>?_method=DELETE" method="POST" style="display:inline;">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    <%}%>
                </div>
            </div>
            
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=camp_sel._id%>/comments/new">New Comment</a>
                </div>
                <hr>
                <%for(var i=0;i<camp_sel.comments.length;i++){%>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=camp_sel.comments[i].author.username%></strong>
                            
                            <%if(current_user && camp_sel.comments[i].author.id.equals(current_user._id)){%>
                                <a class="btn btn-xs btn-warning" href="/campgrounds/<%=camp_sel._id%>/comments/<%=camp_sel.comments[i]._id%>/edit">Edit</a>
                                <form style="display:inline;" action="/campgrounds/<%=camp_sel._id%>/comments/<%=camp_sel.comments[i]._id%>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <%}%>
                            
                            <span class="pull-right">10 days ago</span>
                            <p><%=camp_sel.comments[i].text%></p>
                        </div>
                    </div>
                <%}%>
            </div>
        </div>
    </div>
</div>

<!--=======================================================================-->
<% include ../partials/footer.ejs %>