<% include ../partials/header.ejs %>

<!--=======================================================================-->

<div class="container">
    
        <div class="jumbotron">               <!--Can also be used as header no diff b/w header & div-->
            <div class="container">
                <h1 id="head_camp">Welcome to YelpCamp</h1>
                <p id="head_camp">Select from our world class campgrounds</p>
                <a href="/campgrounds/new" class="btn btn-primary pull-right"><i class="fa fa-plus" aria-hidden="true"></i> Add a new Campground</a>
            </div>
        </div>
    
    <div class="row">
    <div class="text-center">
    <% for(var i=0;i<camps.length;i++){ %>
        <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
            <div class="thumbnail" data-aos="fade-up">
                <div class="view hm-zoom">
                    <img class="img-fluid" src=<%=camps[i].image%>>
                </div>
                <h4 class="caption"><%=camps[i].name%></h4>
                <p><a href="/campgrounds/<%=camps[i]._id%>" class="btn btn-success btn-sm"><i class="fa fa-info-circle" aria-hidden="true"></i> More Info</a></p>
            </div>
        </div>
    <%}%>
        </div>
    </div>
</div>


